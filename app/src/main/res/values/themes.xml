<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.SpeechRecognition" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SpeechRecognition" parent="Base.Theme.SpeechRecognition" />

    <style name="TitleSplashScreen">
        <item name="android:textSize">64sp</item>
        <item name="android:fontFamily">@font/almendra_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/dimen_16</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dimen_16</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dimen_16</item>
        <item name="boxCornerRadiusTopStart">@dimen/dimen_16</item>
        <item name="boxStrokeWidthFocused">@dimen/dimen_0</item>
        <item name="boxStrokeWidth">@dimen/dimen_0</item>
    </style>

    <style name="CardViewStyleMenu" parent="Widget.Material3.CardView.Filled">
        <item name="cardBackgroundColor">#F3F3F9</item>
    </style>
    <style name="Theme.SpeechRecognition.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomTextViewBold" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/abhayalibre_semibold</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CustomTextViewRegular" parent="CustomTextViewBold">
        <item name="fontFamily">@font/aclonica</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomTextViewBoldButton" parent="CustomTextViewBold">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.SpeechRecognition.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.SpeechRecognition.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>